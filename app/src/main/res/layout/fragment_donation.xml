<?xml version="1.0" encoding="utf-8"?>
<com.app.bible.knowbible.mvvm.view.theme_editor.MyNestedScrollViewLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <com.app.bible.knowbible.mvvm.view.theme_editor.MyLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:orientation="vertical">

                <!--                <ImageView-->
                <!--                    android:id="@+id/donationImage"-->
                <!--                    android:layout_width="140dp"-->
                <!--                    android:layout_height="140dp"-->
                <!--                    android:layout_gravity="center"-->
                <!--                    android:src="@drawable/donation_picture_small" />-->

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/donationAnimationView"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/support_ministry_anim"
                    app:lottie_speed="0.8" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent">

                    <com.app.bible.knowbible.mvvm.view.theme_editor.MyTextView
                        android:id="@+id/tvVerse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="12dp"
                        android:text="@string/tv_donation_text"
                        android:textSize="20sp" />

<!--                    <com.google.android.material.button.MaterialButton-->
<!--                        android:id="@+id/btnVerseDetails"-->
<!--                        style="@style/Widget.MaterialComponents.Button.TextButton"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_below="@id/tvVerse"-->
<!--                        android:layout_alignEnd="@id/tvVerse"-->
<!--                        android:layout_marginEnd="8dp"-->
<!--                        android:padding="8dp"-->
<!--                        android:text="@string/Details"-->
<!--                        android:textAllCaps="false"-->
<!--                        android:textSize="14sp"-->
<!--                        app:backgroundTint="@android:color/transparent"-->
<!--                        app:cornerRadius="20dp" />-->
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">

            <com.app.bible.knowbible.mvvm.view.theme_editor.MyButton
                android:id="@+id/btnSupportMinistry"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="200dp"
                android:layout_height="210dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="12dp"
                android:text="@string/tv_support"
                android:textAllCaps="true"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="100dp" />
        </RelativeLayout>
    </com.app.bible.knowbible.mvvm.view.theme_editor.MyLinearLayout>
</com.app.bible.knowbible.mvvm.view.theme_editor.MyNestedScrollViewLayout>

