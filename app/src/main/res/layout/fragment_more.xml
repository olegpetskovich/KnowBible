                android:layout_alignStart="@id/tvContactUs"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:paddingBottom="1dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btnPrivacyPolicy"
            android:layout_width="match_parent"
