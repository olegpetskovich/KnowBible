                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_highlighted_verses" />

            <com.app.bible.knowbible.mvvm.view.theme_editor.MyTextView
                android:id="@+id/tvHighlightedVerses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/ivHighlightedVerses"
                android:text="@string/tv_highlighted_verses"
                android:textSize="18sp" />

            <com.app.bible.knowbible.mvvm.view.theme_editor.MyView
                android:id="@+id/viewHighlightedVerses"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_below="@id/tvHighlightedVerses"
                android:layout_alignStart="@id/tvHighlightedVerses"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:paddingBottom="1dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btnContactUs"
