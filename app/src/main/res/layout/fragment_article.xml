<?xml version="1.0" encoding="utf-8"?>
<com.app.bible.knowbible.mvvm.view.theme_editor.MyRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.app.bible.knowbible.mvvm.view.theme_editor.MyNestedScrollViewLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <com.app.bible.knowbible.mvvm.view.theme_editor.MyLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivArticleImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/example_picture" />

            <com.app.bible.knowbible.mvvm.view.theme_editor.MyTextView
                android:id="@+id/tvArticleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:fontFamily="@font/neo_sans_pro_regular_cyr"
                android:textSize="24sp"
                tools:text="Lorem ipsum dolor" />

            <com.app.bible.knowbible.mvvm.view.theme_editor.MyTextView
                android:id="@+id/tvArticleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:lineSpacingExtra="6dp"
                android:textIsSelectable="true"
                android:textSize="17sp"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum." />

        </com.app.bible.knowbible.mvvm.view.theme_editor.MyLinearLayout>
    </com.app.bible.knowbible.mvvm.view.theme_editor.MyNestedScrollViewLayout>

    <com.app.bible.knowbible.mvvm.view.theme_editor.MyAppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">

        <com.app.bible.knowbible.mvvm.view.theme_editor.MyToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways|snap">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnTelegramChannel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_telegram" />

                <ImageView
                    android:id="@+id/btnInstagramChannel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="6dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_instagram" />

                <com.app.bible.knowbible.mvvm.view.theme_editor.MyTextView
                    android:id="@+id/tvAuthorName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/neo_sans_pro_regular_cyr"
                    android:gravity="end"
                    android:textSize="20sp"
                    tools:text="KnowBible" />
            </LinearLayout>
        </com.app.bible.knowbible.mvvm.view.theme_editor.MyToolbar>
    </com.app.bible.knowbible.mvvm.view.theme_editor.MyAppBarLayout>
</com.app.bible.knowbible.mvvm.view.theme_editor.MyRelativeLayout>