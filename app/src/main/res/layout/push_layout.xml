<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/rootLinear"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivPushMainIcon"
        android:layout_width="@dimen/_32sdp"
        android:layout_height="@dimen/_32sdp"
        android:layout_marginHorizontal="@dimen/_4sdp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_book_find_second"
        android:tint="@color/colorPrimary"
        tool:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvPushMainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="@dimen/_6sdp"
        android:layout_toStartOf="@+id/btnRead"
        android:layout_toEndOf="@+id/ivPushMainIcon"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="3"
        android:text="@string/tv_time_to_read"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_11sdp"
        android:visibility="visible"
        tool:ignore="RtlSymmetry" />

    <Button
        android:id="@+id/btnRead"
        android:layout_width="@dimen/_76sdp"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_push_read"
        android:ellipsize="end"
        android:maxWidth="@dimen/_20sdp"
        android:maxLines="1"
        android:text="@string/tv_read"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold" />

</RelativeLayout>